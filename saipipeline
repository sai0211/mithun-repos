node{

def mavenHome = tool name: "maven3.8.6"
try{
stage('CheckOutCode'){
git branch: 'development', credentialsId: '519aacb7-5c2e-417c-afa6-c600ea8ecf97', url: 'https://github.com/sai0211/mithun-repos.git'
}

stage('Build'){
sh "${mavenHome}/bin/mvn clean package"
}


stage('ExecuteSonarQubeReport'){
sh "${mavenHome}/bin/mvn clean sonar:sonar"
}

stage('UploadArtifcatsIntoArtifactoryRepo'){
sh "${mavenHome}/bin/mvn clean deploy"
}

stage('DeployAppIntoTomcatServer'){
sshagent(['342ab605-5997-4346-b326-b7461fdeafef']) {
 sh "scp -o StrictHostKeyChecking=no target/maven-web-application.war  ec2-user@3.92.236.243:/opt/apache-tomcat-9.0.65/webapps/"
}
}
}//try block closing
catch (e){
slackNotifications('FAILURE')
throw e
}
finally{
slackNotifications(currentBuild.result)
}

}//Node closing

//Code Snippet for sending slack notifications.

def slackNotifications(String buildStatus = 'STARTED') {
  // build status of null means successful
  buildStatus =  buildStatus ?: 'SUCCESS'
  
  // Default values
  def colorName = 'RED'
  def colorCode = '#FF0000'
  def subject = "${buildStatus}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'"
  def summary = "${subject} (${env.BUILD_URL})"

  // Override default values based on build status
  if (buildStatus == 'STARTED') {
    colorName = 'YELLOW'
    colorCode = '#FFFF00'
  } else if (buildStatus == 'SUCCESS') {
    colorName = 'GREEN'
    colorCode = '#686868'
  } else {
    colorName = 'RED'
    colorCode = '#FF0000'
  }

  // Send notifications
  slackSend (color: colorCode, message: summary,chanel:"#walmart")
}

